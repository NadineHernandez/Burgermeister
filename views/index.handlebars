<div class="card">
    <div class="row">
        <div class="col-4">
            <!-- burgers to eat -->
            <ul>
                {{#each burgers}} 
                    {{#unless devoured}} 
                        {{> burgers/burger-block}} 
                    {{/unless}} 
                {{/each}}
            </ul>
        </div>
        <div class="col-4">
            <h1>Eat the burger</h1>
            <!-- img -->
            <form class="create-form">
                <div class="form-group">
                    <label for="enterBurger"></label>
                    <textarea class="form-control" id="enterBurger" rows="3"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <div class="center">
                <p>Type in the name of the burger you'd like to eat and press "Submit"</p>
            </div>
        </div>
        <div class="col-4">
            <!-- eaten burgers -->
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                    <li>{{id}} {{burger_name}}</li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

</div>